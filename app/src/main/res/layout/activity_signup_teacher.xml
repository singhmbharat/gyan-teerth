<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_signup_teacher"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context="com.example.android.gyanteerth.SignupTeacher">

    <ImageView
        android:id="@+id/teacherimageid"
        android:layout_width="100dp"
        android:layout_height= "110dp"
        android:background="@color/colorBackgroundWhite"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/bigger_activity_horizontal_margin"
        />
    <TextView
        android:id="@+id/teachermobileid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/teacherimageid"
        android:text="HI Devansh!"
        android:textSize="@dimen/MediumText"
        android:layout_marginTop="@dimen/smaller_activity_horizontal_margin"
        />
    <TextView
        android:id="@+id/teacherInstructionid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/teachermobileid"
        android:text="Please enter the following details to continue"
        android:layout_marginTop="@dimen/small_activity_vertical_margin"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/teacherInstructionid"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        >

        <EditText
            android:id="@+id/teachermobilenoid"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edittext"
            android:hint="Mobile No"
            android:background="@drawable/edittextshapes"
            android:textSize="@dimen/SmallText"
            android:textAlignment="center"
            android:inputType="number"
            android:layout_marginLeft="@dimen/large_activity_vertical_margin"
            android:layout_marginRight="@dimen/large_activity_vertical_margin"

            />
        <Spinner
            android:id="@+id/teacherscollegetype"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edittext"
            android:text="College"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/large_activity_vertical_margin"
            android:layout_marginRight="@dimen/large_activity_vertical_margin"
            android:background="@drawable/edittextshapes"
            />
        <Button
            android:id="@+id/teachercontbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Continue"
            android:background="@drawable/shapes"
            android:textAlignment="center"
            android:textColor="@color/colorBackgroundWhite"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/bigger_activity_horizontal_margin"
            android:layout_marginLeft="@dimen/bigger_activity_horizontal_margin"
            android:onClick="continueOnClick"
            />
    </LinearLayout>
</RelativeLayout>
