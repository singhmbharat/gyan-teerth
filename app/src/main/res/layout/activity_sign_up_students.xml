<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign_up_students"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.gyanteerth.SignUpStudents"
    android:background="@color/colorBackground"
    >
    <ImageView
        android:id="@+id/studentimageid"
        android:layout_width="100dp"
        android:layout_height= "110dp"
        android:background="@color/colorBackgroundWhite"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/bigger_activity_horizontal_margin"
        />
    <TextView
        android:id="@+id/studentnameid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/studentimageid"
        android:text="HI NItin!"
        android:textSize="@dimen/MediumText"
        android:layout_marginTop="@dimen/smaller_activity_horizontal_margin"
        />
    <TextView
        android:id="@+id/Instructionid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/studentnameid"
        android:text="Please enter the following details to continue"
        android:layout_marginTop="@dimen/small_activity_vertical_margin"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Instructionid"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:orientation="vertical"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/edittext"
            android:hint="Mobile No"
            android:background="@drawable/edittextshapes"
            android:textSize="@dimen/SmallText"
            android:textAlignment="center"
           android:inputType="number"
            android:layout_marginLeft="@dimen/large_activity_vertical_margin"
            android:layout_marginRight="@dimen/large_activity_vertical_margin"

            />
        <Spinner
            android:id="@+id/collegetype"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edittext"
            android:text="College"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/large_activity_vertical_margin"
            android:layout_marginRight="@dimen/large_activity_vertical_margin"
            android:background="@drawable/edittextshapes"
            />
        <Spinner
            android:id="@+id/branchtype"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edittext"
            android:text="Branch"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/large_activity_vertical_margin"
            android:layout_marginRight="@dimen/large_activity_vertical_margin"
            android:background="@drawable/edittextshapes"
            />
        <DatePicker
            android:id="@+id/datepicker"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/edittext"
            android:background="@drawable/edittextshapes"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/large_activity_vertical_margin"
            android:layout_marginRight="@dimen/large_activity_vertical_margin"

            >

        </DatePicker>

        <Button
            android:id="@+id/studentcontbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shapes"
            android:text="Continue"
            android:textAlignment="center"
            android:textColor="@color/colorBackgroundWhite"
            android:layout_marginTop="@dimen/smaller_activity_horizontal_margin"
            android:layout_marginRight="@dimen/bigger_activity_horizontal_margin"
            android:layout_marginLeft="@dimen/bigger_activity_horizontal_margin"
            android:onClick="continueOnClick"
            />

    </LinearLayout>




</RelativeLayout>
